.touxiang {
    border-radius: 50%;
    height: 5rem;
    width: 5rem;
    margin-top: 1rem;
    margin-left: 1.5rem;
    background-color: white;
    position: relative;
    top: 3rem;
}

.flex_only {
    display: flex;
}

.icon {
    height: 2rem;
    width: 2rem;
}

.popup-box {
    position: absolute;
    z-index: 99;
    top: 0;
    background-color: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 100%;
}

.info-center {
    position: fixed;
    z-index: 999;
    background-color: rgb(253, 253, 253);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10rpx;
    width: 100%;
    bottom: 0 !important;
    /* margin-top: 40vh; */
}

.left-btn {
    background-color: #f1f1f1;
    color: rgb(46, 218, 46);
}

.right-btn {
    background-color: rgb(46, 218, 46);
    color: white;
}

.row-btn {
    display: flex;
    flex-direction: row;
    align-items: center;
    border-top: 1rpx dashed #f1f1f1;
}

.row-btn view {
    flex: 1;
    text-align: center;
    margin-top: 20rpx;
    margin-right: 1rem;
    margin-left: 1rem;
    padding-top: 15rpx;
    padding: 12rpx 0;
    font-size: 32rpx;
    border-radius: 10rpx;
}