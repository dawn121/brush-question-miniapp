            <image bindtap="my" class="touxiang" src="../../lib/img/touxiang.png"></image>
            <view style="margin-left: 1rem;margin-top: 1rem;">
                <text style="font-size: xx-large;color: white;">.。.
                </text>
                <text style="font-size: small;color: white;">1人正在刷题</text>
            </view>
        </view>
    </view>
    <view class="shouye_dingkuang">
        <view class="daojishi">
            <view class="kaoyan">2024考研</view>
            <view class="yingyongxinli">347应用心理</view>
        </view>
        <view class="flex_only">
            <view style="width:40%;" class="abc">
                <view class="jianchitianshu">坚持天数</view>
