            </view>
            <view class="shufengexian"></view>
            <view class="zhongshandaxue" style="display: flex;justify-content: center;align-items: center;">
                <picker bindchange="bindPickerChange" value="{{index_school}}" range="{{school}}">
                    <view >{{school[index_school]}}</view>
                </picker>
            </view>
        </view>
    </view>

    <view style="background-color: white;margin-left: 1.5rem;margin-right: 1.5rem;margin-top: 1rem;padding-bottom: 1rem;border-radius: 1rem;">
