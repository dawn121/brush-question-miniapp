            </view>
            <view>
                <view class="shouye_zhongkuang_xiao1" bindtap="linianzhenti">
                    <view style="color: white;font-size: large;font-weight: bold;margin-left: 1rem;padding-top: 0.5rem;">历年真题</view>
                    <view style="color: white;font-size: small;font-weight: normal;margin-left: 1rem;padding-top: 0.3rem;">2017-2022真题</view>
                </view>
                <view class="shouye_zhongkuang_xiao2" bindtap="jiyika">
                    <view style="color: white;font-size: large;font-weight: bold;margin-left: 1rem;padding-top: 0.5rem;">记忆卡</view>
                    <view style="color: white;font-size: small;font-weight: normal;margin-left: 1rem;padding-top: 0.3rem;">知识点背诵</view>
                </view>
            </view>
        </view>
    </view>

    <view style="background-color: white;margin-left: 1.5rem;margin-right: 1.5rem;margin-top: 1rem;border-radius: 1rem;">
        <view class="flex_only">
            <view style="margin-left: 5rem;width: 0.1rem;height: 1rem;background-color: rgb(255, 255, 255);">
            </view>
            <view style="margin-left: 12rem;margin-right: 5rem;width: 0.1rem;height: 1rem;background-color: rgb(255, 255, 255);">
            </view>
        </view>
        <view class="mingcijieshi" bindtap="mingcijieshi">
            <view style="font-size: x-large;color: white;font-weight: bold;margin-left: 1.5rem;padding-top: 0.5rem;">名词解释
            </view>
