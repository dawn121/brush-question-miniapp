            <view class="shouye_zhongkuang_da" bindtap="kaodianshuati">
                <view style="color: white;font-size: x-large;font-weight: bold;margin-left: 1rem;margin-top: 1rem;">考点刷题</view>
                <view style="color: white;font-size: 25rpx;font-weight: normal;margin-left: 1rem;margin-top: 0.3rem;">共为16个章节</view>
